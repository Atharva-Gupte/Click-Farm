doctype html 
html 
    head 
        title= title 
    body 
        div.container
            h1 Farmer Details 
            table.table 
                thead
                    tr  
                        th ID 
                        th Name 
                        th Village
                        th p_id 
                        th Price
                each item in items 
                    tr 
                        td= item.fid
                        td=  item.f_name 
                        td=  item.village 
                        td= item.p_id 
                        td= item.p_price